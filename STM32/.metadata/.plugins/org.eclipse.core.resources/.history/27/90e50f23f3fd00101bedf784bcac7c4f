#ifndef INC_STM32F401XX_GPIO_DRIVER_H_
#define INC_STM32F401XX_GPIO_DRIVER_H_

#include "STM32F401xx.h"

typedef struct
{

	uint8_t GPIO_PinNUMBER;
	uint8_t GPIO_PinMODE;
	uint8_t GPIO_PinSPEED;
	uint8_t GPIO_PinPUPPD_CONTROL;
	uint8_t GPIO_PinOP_TYPE;
	uint8_t GPIO_PinALT_FUN_MODE;

}GPIO_Pin_CONFIG_t;

typedef struct
{
	GPIO_REGDEF_t *pGPIOx;
	GPIO_Pin_CONFIG_t GPIO_PIN_CONTROL;

}GPIO_HANDLE;










#endif /* INC_STM32F401XX_GPIO_DRIVER_H_ */
